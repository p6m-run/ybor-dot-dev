---
import { ArrowRightIcon } from "lucide-react"
import Logo from "./Brand"
import YInfraLogo from "../assets/y-infra-logo.svg";
import YAppLogo from "../assets/y-app-logo.svg";
import YAiLogo from "../assets/y-ai-logo.svg";
import YEdeLogo from "../assets/y-ede-logo.svg";
import { Image } from "astro:assets";
interface HeaderProps {
  products: any[];
}

const { products } = Astro.props;
---
<!-- Header -->
    <header>
      <div
        class="container mx-auto px-6 py-4 flex items-center justify-between"
      >
        <div class="flex items-center gap-8">
          <div class="text-xl font-bold font-mono">
            <a href="/"> <Logo /></a>
          </div>
          <nav class="hidden md:flex items-center gap-6">
            <!-- Products Mega Menu -->
            <div class="relative group">
              <button
                class="flex items-center gap-1 text-sm text-gray-700 hover:text-brand-purple transition-colors"
              >
                Products
                <svg
                  class="w-4 h-4 transition-transform group-hover:rotate-180"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              
              <!-- Mega Menu -->
              <div class="absolute top-full left-0 mt-2 w-[800px] max-w-[90vw] bg-white rounded-xl shadow-2xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
                <div class="p-8">
                  <div class="grid gap-8">
                    <!-- Left Section - Products -->
                    <div>
                      <h3 class="text-2xl font-bold text-gray-900 mb-2">Products</h3>
                      <p class="text-gray-600 mb-6 text-sm">
                        Accelerate your business with our comprehensive platform solutions.
                      </p>
                      
                      <!-- Product Cards Grid -->
                      <div class="grid grid-cols-2 gap-4">
                        <!-- Y_Infra Card -->
                        <a href="#y-infra" class="group/card p-4 rounded-lg border border-gray-200 hover:border-brand-blue transition-all duration-200">
                          <div class="flex items-center justify-start mb-3">
                            <Image src={YInfraLogo} alt={products[0].fields?.name || "--"} class="h-8 w-auto" />
                          </div>
                          <p class="text-xs text-gray-600">
                            {products[0].fields?.description || "--"}
                          </p>
                        </a>
                        
                        <!-- Y_App Card -->
                        <a href="#y-app" class="group/card p-4 rounded-lg border border-gray-200 hover:border-brand-green transition-all duration-200">
                          <div class="flex items-center justify-start mb-3">
                            <Image src={YAppLogo} alt={products[1].fields?.name || "--"} class="h-8 w-auto" />
                          </div>
                          <p class="text-xs text-gray-600">
                            {products[1].fields?.description || "--"}
                          </p>
                        </a>
                        
                        <!-- Y_AI Card -->
                        <a href="#y-ai" class="group/card p-4 rounded-lg border border-gray-200 hover:border-brand-orange transition-all duration-200">
                          <div class="flex items-center justify-start mb-3">
                            <Image src={YAiLogo} alt={products[2].fields?.name || "--"} class="h-8 w-auto" />
                          </div>
                          <p class="text-xs text-gray-600">
                            {products[2].fields?.description || "--"}
                          </p>
                        </a>
                        
                        <!-- Y_EDE Card -->
                        <a href="#y-ede" class="group/card p-4 rounded-lg border border-gray-200 hover:border-brand-yellow transition-all duration-200">
                          <div class="flex items-center justify-start mb-3">
                            <Image src={YEdeLogo} alt={products[3].fields?.name || "--"} class="h-8 w-auto" />
                          </div>
                          <p class="text-xs text-gray-600">
                            {products[3].fields?.description || "--"}
                          </p>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <a href="#" class="text-sm text-gray-700 hover:text-brand-purple transition-colors"
              >Platform Configurator</a
            >
            <a href="#" class="text-sm text-gray-700 hover:text-brand-purple transition-colors"
              >Careers</a
            >
            <a href="#" class="text-sm text-gray-700 hover:text-brand-purple transition-colors"
              >Contact</a
            >
          </nav>
        </div>
        <div class="flex items-center gap-3">
          <button
            class="inline-flex items-center justify-center rounded-full text-sm font-medium border border-gray-300 bg-transparent hover:bg-gray-50  hover:text-brand-purple transition-colors h-10 px-6 py-2"
          >
            Get Started
            <ArrowRightIcon className="w-4 h-4 ml-4" />
          </button>
          <button
            class="inline-flex items-center justify-center rounded-full text-sm font-medium hover:bg-gray-100 hover:text-brand-purple transition-colors h-10 px-4 py-2"
          >
            Log In
          </button>
        </div>
      </div>
    </header>