---
import { ArrowDownIcon } from "@lucide/astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="container mx-auto px-6 py-4" data-animate="fade-up">
  <div>
    <div class="mb-3">
      <div class="font-mono text-xs text-gray-500 italic">
        {title}
      </div>
    </div>
    <div
      class="p-6 md:p-12 bg-card border border-gray-100"
    >
      <slot />
    </div>
  </div>
</section>
