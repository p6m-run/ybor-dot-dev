import Terminal from "../components/Terminal.astro";
import Form from "../components/Form";
import Layout from "../layouts/Layout.astro";
import Analytics from "@vercel/analytics/astro";

import Logo from "@/components/Brand";
import { Image } from "astro:assets";
import PostHogLayout from "@/layouts/PostHogLayout.astro";
import { ArrowDownIcon, ArrowRightIcon, MoveRightIcon } from "lucide-react";
import UnlockPaceImage from "../assets/unlock-pace.svg";
import P6MResourcesImage from "../assets/p6m-resources.svg";
import SuccessFlexiblePlatformImage from "../assets/success-flexible-platform.svg";
import Section from "@/components/Section.astro";
import CertificationsImage from "../assets/certifications.svg";
import HomeHeroImage from "../assets/home-hero.svg";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import AnimatedProgressBar from "@/components/AnimatedProgressBar";
import YInfraLogo from "../assets/y-infra-logo.svg";
import YInfraProductsImage from "../assets/home-y-infra-product.svg";
import YAppProductsImage from "../assets/home-y-app-product.svg";
import YAppLogo from "../assets/y-app-logo.svg";
import YAiLogo from "../assets/y-ai-logo.svg";
import YAiProductsImage from "../assets/home-y-ai-product.svg";
import YEdeLogo from "../assets/y-ede-logo.svg";
import YEdeProductsImage from "../assets/home-y-ede-product.svg";

// Import Contentful functions
import { getHomepageData } from "../lib/contentful";
import Header from "@/components/Header.astro";

// Fetch homepage data from Contentful
const homepageData = await getHomepageData();

// Log status for debugging
if (homepageData) {
  console.log("✅ Contentful data loaded successfully");
} else {
  console.log("⚠️ No Contentful data found, using static fallbacks");
}

// Process sections if data is available
const heroSection = homepageData?.heroSection.fields;
const missionSection = homepageData?.missionSection.fields;
const challengesSection = homepageData?.challengesSection.fields;
const platformSection = homepageData?.platformSection.fields;
const businessImpactSection = homepageData?.businessImpactSection.fields;
const productSuiteSection = homepageData?.productSuiteSection.fields;
const testimonialsSection = homepageData?.testimonialsSection.fields;
const certificationsSection = homepageData?.certificationsSection.fields;
const contactSection = homepageData?.contactSection.fields;
