---
import { Toaster } from "@/components/ui/toaster";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Ybor</title>
    <meta
      name="description"
      content="The Ybor AI Platform: Enterprise software made easy. Accelerate AI software development with extreme automation."
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Manrope:wght@200..800&display=swap" rel="stylesheet">
  </head>
  <body class="manrope">
    <slot />
    <Toaster client:load />
  </body>
</html>

<style is:global>
  .jetbrains-mono {
    font-family: "JetBrains Mono", serif;
    font-optical-sizing: auto;
    font-style: normal;
  }

  .manrope {
    font-family: "Manrope", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }
</style>
